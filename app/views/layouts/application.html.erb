<!DOCTYPE html>
<html>
<head>
  <title><%= APP_CONFIG[:name] %><%= content_for?(:title) ? " - #{yield(:title)}" : "" %></title>
  <%= csrf_meta_tags %>

  <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'jquery-3.1.1.min', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'authors', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<div class="container">
<%= react_component("navigation/Navigation", {  controller: params[:controller],
                                                letter: params[:letter],
                                                logo_path: asset_path("Opendoors.png"),
                                                config: @archive_config,
                                                current_user: current_user.as_json,
                                                logout_path: logout_path,
                                                login_path: login_path,
                                                signup_path: signup_path,
                                                authors_path: authors_path}) %>
  <p>&nbsp;</p>
  <h1><%= APP_CONFIG[:name] %></h1>
  <%= react_component("SiteInfo", { config: @api_config.merge(@archive_config) } ) %>

  <%= yield %>
</div>

<footer>
  a footer
</footer>
</body>
</html>

