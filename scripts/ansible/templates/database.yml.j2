default: &default
  adapter: mysql2
  encoding: utf8
  database: {{ sitekey }}
  username: {{ mysql_user }}
  password: {{ mysql_pw }}
  socket: {{ mysql_socket }}
  variables:
    sql_mode: STRICT_TRANS_TABLES,NO_ZERO_IN_DATE,NO_ZERO_DATE,ERROR_FOR_DIVISION_BY_ZERO,NO_AUTO_CREATE_USER,NO_ENGINE_SUBSTITUTION

test:
  <<: *default
  database: opendoorstempsite_test

production:
  <<: *default
